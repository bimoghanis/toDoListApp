<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.todolistapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">

    <action
        android:id="@+id/action_homeFragment_to_fragment_addtask"
        app:destination="@id/fragment_addtask" />
    </fragment>

    <fragment
        android:id="@+id/fragment_addtask"
        android:name="com.example.todolistapp.ui.home.AddTaskFragment"
        android:label="@string/title_add_task"
        tools:layout="@layout/fragment_addtask" >
        <action
            android:id="@+id/action_fragment_addtask_to_homeFragment"
            app:destination="@id/navigation_home" />
        <action
            android:id="@+id/action_fragment_addtask_to_navigation_home2"
            app:destination="@id/navigation_home" />
        <action
            android:id="@+id/action_fragment_addtask_to_navigation_home3"
            app:destination="@id/navigation_home" />
        <action
            android:id="@+id/action_fragment_addtask_to_navigation_home4"
            app:destination="@id/navigation_home" />
    </fragment>

</navigation>